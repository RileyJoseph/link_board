<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 style="text-center">Create Post!</h1>

    <%= render "layouts/flash"%>
    <%= bootstrap_form_for :post do |f| %>
      <%= f.text_field :title, placeholder:"Title" %>
      <%= f.text_field :link, placeholder:"Enter your link"%>

      <%= f.submit "Post!" %>
    <% end %>
  </div>
</div>